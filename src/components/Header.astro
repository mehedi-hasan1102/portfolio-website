<header class="bg-transparent transition-colors border-b border-gray-200 dark:border-gray-700">
  <div class="max-w-3xl mx-auto px-6 py-4 flex justify-between items-center">
    <h1 id="logo-text" class="text-xl font-bold text-gray-900 dark:text-white">Mehedi Hasan</h1>
    
    <nav id="nav-menu" class="flex gap-6">
      <a href="#about" class="nav-link text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium">About</a>
      <a href="#portfolio" class="nav-link text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium">Portfolio</a>
      <a href="#contact" class="nav-link text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium">Contact</a>
    </nav>
  </div>
</header>

<script>
  // Import GSAP
  import gsap from 'gsap';

  function animateHeader() {
    // Animate logo
    gsap.from('#logo-text', {
      duration: 0.8,
      opacity: 0,
      y: -20,
      ease: 'power2.out'
    });

    // Animate nav links
    gsap.from('.nav-link', {
      duration: 0.8,
      opacity: 0,
      y: -20,
      stagger: 0.1,
      ease: 'power2.out'
    });

    // Add hover animation to nav links
    document.querySelectorAll('.nav-link').forEach((link: Element) => {
      link.addEventListener('mouseenter', function(this: Element) {
        gsap.to(this, {
          duration: 0.3,
          scale: 1.1,
          color: 'currentColor',
          ease: 'power2.out'
        });
      });

      link.addEventListener('mouseleave', function(this: Element) {
        gsap.to(this, {
          duration: 0.3,
          scale: 1,
          ease: 'power2.out'
        });
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      animateHeader();
    });
  } else {
    animateHeader();
  }
</script>
