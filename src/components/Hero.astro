<section id="hero" class="min-h-screen flex flex-col justify-center items-center px-6 relative overflow-hidden">
  <div class="text-center z-10">
    <h1 id="hero-title" class="text-5xl md:text-7xl font-bold mb-6 text-gray-900 dark:text-white">
      Hi, I'm Mehedi Hasan
    </h1>
    <p id="hero-subtitle" class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8">
      Full-Stack Developer & Creative Designer
    </p>
    <p id="hero-description" class="text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto mb-12">
      Building beautiful, animated, and functional web experiences with modern technologies.
    </p>
    
    <div id="hero-buttons" class="flex gap-4 justify-center flex-wrap">
      <a href="#portfolio" class="cta-button bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
        View My Work
      </a>
      <a href="#contact" class="cta-button border-2 border-gray-400 dark:border-gray-600 text-gray-900 dark:text-white px-8 py-3 rounded-lg font-semibold hover:border-gray-600 dark:hover:border-gray-400 transition-colors">
        Get in Touch
      </a>
    </div>
  </div>

  <!-- Animated background elements -->
  <div id="bg-blob-1" class="absolute top-20 left-10 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 dark:opacity-10"></div>
  <div id="bg-blob-2" class="absolute bottom-20 right-10 w-72 h-72 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 dark:opacity-10"></div>
</section>

<script>
  import gsap from 'gsap';

  function animateHero() {
    const timeline = gsap.timeline();

    // Animate hero title
    timeline.from('#hero-title', {
      duration: 1,
      opacity: 0,
      y: 50,
      ease: 'power3.out'
    }, 0);

    // Animate subtitle
    timeline.from('#hero-subtitle', {
      duration: 1,
      opacity: 0,
      y: 30,
      ease: 'power3.out'
    }, 0.2);

    // Animate description
    timeline.from('#hero-description', {
      duration: 1,
      opacity: 0,
      y: 20,
      ease: 'power3.out'
    }, 0.4);

    // Animate buttons
    timeline.from('.cta-button', {
      duration: 0.8,
      opacity: 0,
      y: 20,
      stagger: 0.1,
      ease: 'power3.out'
    }, 0.6);

    // Animate background blobs
    gsap.to('#bg-blob-1', {
      duration: 8,
      x: 50,
      y: 50,
      repeat: -1,
      yoyo: true,
      ease: 'sine.inOut'
    });

    gsap.to('#bg-blob-2', {
      duration: 10,
      x: -50,
      y: -50,
      repeat: -1,
      yoyo: true,
      ease: 'sine.inOut'
    });

    // Add button hover animations
    document.querySelectorAll('.cta-button').forEach(button => {
      button.addEventListener('mouseenter', () => {
        gsap.to(button, {
          duration: 0.3,
          scale: 1.05,
          ease: 'power2.out'
        });
      });

      button.addEventListener('mouseleave', () => {
        gsap.to(button, {
          duration: 0.3,
          scale: 1,
          ease: 'power2.out'
        });
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', animateHero);
  } else {
    animateHero();
  }
</script>
